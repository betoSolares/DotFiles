# 
# !/bin/sh
# Notification low level battery
#

# Get the level
level="$(cat /sys/class/power_supply/BAT0/capacity)"
message="$(printf "Please connect the charger.\nLow battery level: %s%%" "$level")"

# Send the notification
[ "$(cat /sys/class/power_supply/BAT0/status)" = "Charging" ] && exit
[ "$level" -lt 15 ] &&
export DBUS_SESSION_BUS_ADDRESS=unix:path=/run/user/1001/bus &&
notify-send -i ~/.icons/Papirus-Dark/32x32/devices/battery.svg -a Battery "$message"

