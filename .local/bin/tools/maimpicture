#!/bin/sh
# Source: https://github.com/LukeSmithxyz/voidrice/blob/archi3/.local/bin/i3cmds/maimpick

. ${HOME}/.cache/wal/colors.sh

NAME=~/Pictures/Screenshots/screnshoot-$(date '+%y%m%d-%H%M-%S').png
case "$(printf "a selected area\\ncurrent window\\nfull screen" | dmenu -l 6 -i -p "Screenshot which area?" -nb $color1 -nf $color7 -sb $color0 -sf $color1)" in
	"a selected area") maim -s $NAME && notify-send -i $NAME -a maimpicture "Screenshot taken" ;;
	"current window") maim -i "$(xdotool getactivewindow)" $NAME && notify-send -i $NAME -a maimpicture "Screenshot taken" ;;
	"full screen") maim $NAME && notify-send -i $NAME -a maimpicture "Screenshot taken" ;;
esac
