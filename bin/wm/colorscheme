# 
# !/bin/sh
# Genereate a color scheme
# 

# Set the background using wal
if [[ "$1" = "RECOVERY" ]]; then
	wal -R
else
	wal -i $1
fi

# Create and set the gtk theme
gengtk

# Update the Xresources file
cp -f ~/.cache/wal/colors.Xresources ~/.Xresources

# Start dunst with colors
dunstcolors

# Change the colors for vivaldi browser and the startpage
internetcolors

