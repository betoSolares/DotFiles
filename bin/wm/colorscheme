#!/bin/sh
# Genereate a color scheme

# Set the background using wal
if [[ "$1" = "RECOVERY" ]]; then
	wal -R
else
	wal -i $1
fi

gengtk # Create and set the gtk theme
cp -f ~/.cache/wal/colors.Xresources ~/.Xresources # Update the Xresources file
dunstcolors # Start dunst with colors
internetcolors # Change the colors for vivaldi browser and the startpage
