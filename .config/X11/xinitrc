#!/bin/sh
# X11 read this file in startup

# Load and merge the resources file
[[ -f ~/.Xresources ]] && xrdb -merge -I$HOME ~/.Xresources

# Keyboard adjustment
setxkbmap -option caps:swapescape

# Execute wm
if [ "${WM}" = "fvwm" ]; then
  exec dbus-launch fvwm -f ${HOME}/.config/fvwm/config
else
  exec dbus-launch "${WM}"
fi
