[colors]
background=${xrdb:color1:#222}
background-alt=${xrdb:color2:#222}
foreground=${xrdb:color7:#222}
foreground-alt=${xrdb:color0:#222}

[bar/fvwm]
height=20
width=400
bottom=true
radius=8
offset-y=10
offset-x=946
#override-redirect=true
padding=1
module-margin-left=1
background=${colors.background}
foreground=${colors.foreground-alt}
font-0="Monospace:pixelsize=10;3"
modules-right=backlight icon-volume volume network battery-icon battery date clock

[bar/dwm]
height=20
width=96%
offset-x=2%
offset-y=5
override-redirect=false
fixed-center=true
padding=1
module-margin-left=1
background=${colors.background}
foreground=${colors.foreground-alt}
font-0="Monospace:pixelsize=10;3"
modules-left=dwm-module
modules-center=clock
modules-right=mpd backlight icon-volume volume network date battery-icon battery
bottom=false

[module/date]
type=internal/date
date=%b %d
format= <label>
label=%date%
label-foreground=${colors.foreground}

[module/clock]
type=internal/date
time=%I:%M
format= <label>
label=%time%
label-foreground=${colors.foreground}

[module/battery]
type=internal/battery
battery=BAT0
adapter=AC
full-at=99
format-charging=<label-charging>
label-charging=%percentage%%
format-charging-foreground=${colors.foreground}
format-discharging=<label-discharging>
label-discharging=%percentage%%
format-discharging-foreground=${colors.foreground}
format-full-foreground=${colors.foreground}

[module/battery-icon]
type=custom/script
exec=iconbattery
interval=60

[module/network]
type=internal/network
interface=wlo1
format-connected=<ramp-signal> <label-connected>
format-disconnected=<label-disconnected>
label-connected=%essid%
label-connected-foreground=${colors.foreground}
label-disconnected=
label-disconnected-foreground=${colors.foreground}
ramp-signal-0=


[module/volume]
type=custom/script
exec=volume
interval=1
format-foreground=${colors.foreground}

[module/icon-volume]
type=custom/script
exec=iconvolume
interval=1

[module/mpd]
type=internal/mpd
host=127.0.0.1
port=6600
label-time=
label-song=%title%
label-song-maxlen=15
label-song-foreground=${colors.foreground}
format-online=<label-time> <label-song>
format-playing=${self.format-online}
format-paused=""
format-stopped=""

[module/backlight]
type=internal/backlight
card=intel_backlight
enable-scroll=false
format=<ramp> <label>
label=%percentage%%
label-foreground=${colors.foreground}
ramp-0=盛

[module/dwm-module]
type = internal/dwm
format = <label-tags> <label-layout>
enable-tags-click=true
enable-layout-click=false
secondary-layout-symbol=[M]

label-layout=| %symbol% |
label-layout-padding=0
label-layout-foreground=${colors.foreground}
label-layout-background=${colors.background}

label-focused=%name%
label-focused-background=${colors.background}
label-focused-foreground=${colors.foreground}
label-focused-padding=1

label-unfocused=%name%
label-unfocused-padding=1
label-unfocused-foreground=${colors.foreground-alt}

label-visible=%name%
label-visible-background=${self.label-focused-background}
label-visible-padding=${self.label-focused-padding}

label-empty=""
label-empty-background=${colors.background}
label-empty-padding=1
