[core]
	editor = nvim
	pager = less
	autocrlf = input
	whitespace = fix
	excludesfile = /home/beto/.config/git/gitignore
[diff]
	tool = nvimdiff
[difftool "nvimdiff"]
	cmd = "nvim -d \"$LOCAL\" \"$REMOTE\" -c \"wincmd w\" -c \"wincmd L\""
[difftool]
	prompt = false
[merge]
	tool = nvimdiff
	conflictstyle = diff3
[mergetool "nvimdiff"]
	cmd = "nvim -d \"$LOCAL\" \"$MERGED\" \"$BASE\" \"$REMOTE\" -c \"wincmd w\" -c \"wincmd J\""
[mergetool]
	prompt = false
	keepBackup = false
[alias]
	a = add -p
	b = branch
	co = checkout -B
	d = difftool
	f = fetch
	g = "!gh"
	l = log --pretty=format:\"%Cgreen%h %Creset%cd %Cblue[%cn] %Creset%s%C(yellow)%d%C(reset)\" --graph --date=relative --decorate --all
	m = mergetool
	pl = "!git pull origin $(git rev-parse --abbrev-ref HEAD)"
	ps = "!git push origin $(git rev-parse --abbrev-ref HEAD)"
	ql = log --color --pretty=format:\"%Cgreen%h%Creset%C(yellow)%d%Creset %s%Creset\" --abbrev-commit -n5
	s = status
	sw = "!f() { git switch $1 2>/dev/null || git switch -c $1; }; f"
[gpg]
	program = gpg2
[color]
	status = auto
	diff = auto
	branch = auto
	interactive = auto
	grep = auto
	ui = auto
[column]
	ui = auto
[push]
	default = current
	followTags = true
[fetch]
	prune = true
[pull]
	rebase = true
[ghq]
